                            position: 'top',
                            align: 'center',
                            labels: {
                                usePointStyle: true,
                                padding: 12,
                                font: {
                                    size: 12,
                                    weight: '600',
                                    family: "'Inter', system-ui, -apple-system, sans-serif"
                                },
                                color: '#374151',
                                boxWidth: 14,
                                boxHeight: 14
                            },
                            onClick: (e, legendItem) => {
