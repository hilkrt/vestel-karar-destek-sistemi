                { bg: 'rgba(169, 169, 169, 0.85)', border: '#A9A9A9', hover: 'rgba(169, 169, 169, 0.95)' }  // AÃ§Ä±k Gri
            ];
            
            // Her departman iÃ§in veri hazÄ±rla
            const datasets = departments.map((dept, idx) => {
                const colorSet = departmentColors[idx % departmentColors.length];
                const dataPoints = months.map(month => {
                    const item = trendData.find(d => d.month_key === month && d.department_name === dept);
                    const kwh = item ? parseFloat(item.total_kwh || 0) : 0;
                    const cost = item ? parseFloat(item.total_cost_tl || 0) : 0;
                    const co2 = item ? parseFloat(item.total_co2_kg || 0) : 0;
                    return { kwh, cost, co2 };
                });
                
