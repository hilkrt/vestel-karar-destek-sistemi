                                        return `${label}: ${value.toLocaleString('tr-TR', {
                                            minimumFractionDigits: 2,
                                            maximumFractionDigits: 2
                                        })} kWh`;
                                    }
                                    
                                    return [
                                        `ğŸ“Š ${label}:`,
                                        `  TÃ¼ketim: ${value.toLocaleString('tr-TR', {
