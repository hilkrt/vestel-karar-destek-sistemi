                                font: { 
                                    size: 12,
                                    weight: '600',
                                    family: "'Inter', system-ui, -apple-system, sans-serif"
                                },
                                padding: 10,
                                callback: function(value) {
                                    if (value >= 1000) {
                                        return (value / 1000).toFixed(1) + 'K kWh';
                                    }
                                    return value.toLocaleString('tr-TR', {
                                        maximumFractionDigits: 0
                                    }) + ' kWh';
                                }
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.06)',
                                lineWidth: 1,
                                drawBorder: false,
                                borderDash: [5, 5]
                            }
                        }
                    },
                    layout: {
                        padding: {
                            top: 10,
                            bottom: 10,
                            left: 5,
                            right: 5
                        }
                    }
                }
            });
        }
    </script>
