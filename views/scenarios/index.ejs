            const ctx = document.getElementById('trendChart').getContext('2d');
            const months = [...new Set(trendData.map(d => d.month_key))].sort().slice(-6);
            const departments = [...new Set(trendData.map(d => d.department_name))].sort();
            
            // KÄ±rmÄ±zÄ±-siyah tonlarÄ± renk paleti (modern ve profesyonel)
            const departmentColors = [
                { bg: 'rgba(220, 20, 60, 0.85)', border: '#dc143c', hover: 'rgba(220, 20, 60, 0.95)' },  // KÄ±rmÄ±zÄ±
                { bg: 'rgba(139, 0, 0, 0.85)', border: '#8B0000', hover: 'rgba(139, 0, 0, 0.95)' },     // Koyu KÄ±rmÄ±zÄ±
